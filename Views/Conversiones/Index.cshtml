@model ExamenParcial.ViewModel.ConversionesViewModel
@{
    ViewData["Title"] = "Conversión de Moneda";
    var result = ViewBag.Result; 
}

<h1>Conversión de Moneda</h1>

<form asp-action="Convert" method="post">
    <label for="currency">Seleccione la moneda:</label>
    <select id="currency" name="currency">
        <option value="USD">USD a BTC</option>
        <option value="BTC">BTC a USD</option>
    </select>
    
    <label for="amount">Cantidad:</label>
    <input type="number" id="amount" name="amount" required />
    
    <button type="submit">Convertir</button>
</form>
<a asp-action="ListConversions" >Ver lista de conversiones</a>

@if (result != null)
{
    <h3>Resultado de Conversión: @ViewBag.Result</h3>
}
